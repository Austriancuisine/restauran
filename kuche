<body>

    <header>
        <h1>LASENTO K√úCHE</h1>
        <p>Aktive Bestellungen</p>
    </header>

    <div class="dashboard" id="adminGrid">
        <p style="text-align: center; grid-column: 1/-1;">Warten auf Bestellungen...</p>
    </div>

    <audio id="notifSound" src="https://www.soundjay.com/buttons/beep-01a.mp3"></audio>

    <script>
        const firebaseConfig = {
            databaseURL: "https://myrestaurant-251b9-default-rtdb.europe-west1.firebasedatabase.app/"
        };
        
        firebase.initializeApp(firebaseConfig);
        const db = firebase.database();

        // –§—É–Ω–∫—Ü—ñ—è –¥–ª—è –≤—ñ–¥–æ–±—Ä–∞–∂–µ–Ω–Ω—è –∑–∞–º–æ–≤–ª–µ–Ω—å
        db.ref('orders').on('value', (snapshot) => {
            const data = snapshot.val();
            const grid = document.getElementById('adminGrid');
            
            if (data) {
                // –ì—Ä–∞—î–º–æ –∑–≤—É–∫, —è–∫—â–æ –∫—ñ–ª—å–∫—ñ—Å—Ç—å –∑–∞–º–æ–≤–ª–µ–Ω—å –∑–±—ñ–ª—å—à–∏–ª–∞—Å—å
                document.getElementById('notifSound').play().catch(e => console.log("Audio play blocked"));
                
                grid.innerHTML = Object.keys(data).map(id => {
                    const order = data[id];
                    const time = order.timestamp ? new Date(order.timestamp).toLocaleTimeString('de-DE', {hour: '2-digit', minute:'2-digit'}) : '--:--';
                    
                    return `
                        <div class="order-card new-order">
                            <div class="order-header">
                                <div>
                                    <span class="table-number">Tisch ${order.table}</span>
                                    <div class="customer-name">${order.name}</div>
                                </div>
                                <div class="order-time">${time}</div>
                            </div>
                            <div class="order-details">${order.details}</div>
                            <div class="total-price">Gesamt: ${order.total}</div>
                            <button class="btn-complete" onclick="finishOrder('${id}')">Erledigt / L√∂schen</button>
                        </div>
                    `;
                }).reverse().join(''); // –ù–æ–≤—ñ –∑–∞–º–æ–≤–ª–µ–Ω–Ω—è –±—É–¥—É—Ç—å –∑–≤–µ—Ä—Ö—É
            } else {
                grid.innerHTML = '<h2 style="text-align: center; width: 100%; color: #444;">Keine aktiven Bestellungen üò¥</h2>';
            }
        });

        function finishOrder(id) {
            if(confirm("Bestellung als erledigt markieren?")) {
                db.ref('orders/' + id).remove();
            }
        }
    </script>
